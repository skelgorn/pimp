{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "LetrasPIP",
  "version": "0.1.0",
  "identifier": "com.letic.letraspip",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:5173",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "LetrasPIP",
        "width": 600,
        "height": 120,
        "minWidth": 400,
        "minHeight": 80,
        "resizable": false,
        "maximizable": false,
        "minimizable": false,
        "alwaysOnTop": true,
        "decorations": false,
        "transparent": true,
        "shadow": false,
        "acceptFirstMouse": false,
        "fullscreen": false,
        "focus": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png", 
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  },
  "plugins": {
    "updater": {
      "active": true,
      "endpoints": [
        "https://github.com/letic/letraspip-tauri/releases/latest/download/latest.json"
      ],
      "dialog": true,
      "pubkey": ""
    }
  }
}
